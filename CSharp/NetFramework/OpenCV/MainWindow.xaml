<Window x:Class="OpenCV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenCV"
        d:DataContext="{d:DesignInstance Type=local:ImageSearchViewModel}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="313"
        Width="448"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button Content="Source"
                    Command="{Binding OpenSource}"/>
            <Button Content="Target"
                    Command="{Binding OpenTarget}"/>
            <Button Content="Search"
                    Command="{Binding Search}"/>
            <TextBox Text="{Binding Threshold}"
                     Width="50"/>
        </ToolBar>
        <Grid Grid.Row="1">
            <Grid.Resources>
                <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}"/>
            <ScrollViewer Grid.Column="0">
                <Image Source="{Binding SourceImage}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
            </ScrollViewer>
            <ScrollViewer Grid.Column="2"
                          HorizontalScrollBarVisibility="Auto">
                <Grid>
                    <Image x:Name="image" Source="{Binding TargetImage}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Stretch="None"/>
                    <Canvas Visibility="{Binding Result, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Width="{Binding Width, ElementName=image}"
                            Height="{Binding Height, ElementName=image}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <Canvas.Background>
                            <SolidColorBrush Color="#7FFFFFFF" Opacity="1"/>
                        </Canvas.Background>
                        <Rectangle Canvas.Left="{Binding ResultRect.Left}"
                                   Canvas.Top="{Binding ResultRect.Top}"
                                   Width="{Binding ResultRect.Width}"
                                   Height="{Binding ResultRect.Height}"
                                   Stroke="Red"
                                   StrokeThickness="2"/>
                    </Canvas>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
